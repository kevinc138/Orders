<% if current_user.try(:admin?) %>
  <p id="notice"><%= notice %></p>

  <h1>Listing Items</h1>

  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Submenuid</th>
        <th>Restaurantid</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.submenuId %></td>
          <td><%= item.restaurantId %></td>
          <td><%= link_to 'Show', item, :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Edit', edit_item_path(item), :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
