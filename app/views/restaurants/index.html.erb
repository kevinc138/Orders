
<% if current_user.try(:admin?) %>
  <p id="notice"><%= notice %></p>

  <h1>Listing Restaurants</h1>

  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Visible</th>
        <th>Description</th>
        <th>Logo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.visible %></td>
          <td><%= restaurant.description %></td>
          <td><%= restaurant.logo %></td>
          <td><%= link_to 'Show', restaurant, :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant), :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Restaurant', new_restaurant_path, :class => "btn btn-default btn-sm"  %>
<% end %>
