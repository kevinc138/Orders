<% if current_user.try(:admin?) %>
  <p id="notice"><%= notice %></p>

  <h1>Listing Submenus</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Restaurant</th>
        <th>Restaurantid</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @submenus.each do |submenu| %>
        <tr>
          <td><%= submenu.name %></td>
          <td><%= submenu.restaurant %></td>
          <td><%= submenu.restaurantId %></td>
          <td><%= link_to 'Show', submenu, :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Edit', edit_submenu_path(submenu), :class => "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', submenu, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>
